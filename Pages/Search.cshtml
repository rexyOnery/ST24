<!-- Page Title -->
<section class="page-title" style="background-image: url(/assets/images/background/page-title.jpg);">
    <div class="auto-container">
        <div class="content-box">
            <div class="title">
                <h1>Laundry Status</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li><a href="/">Home</a></li>
                <li>Laundry Status</li>
            </ul>
        </div>
    </div>
</section>
<!-- End Page Title -->
<!-- contact-style-two -->
<section class="contact-style-two">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-8 col-md-12 col-sm-12 form-column">
                <div class="content_block_6">
                    <div class="content-box">
                        <div class="sec-title">
                            
                            <h2>Laundry Status</h2>
                            <img src="assets/images/icons/icon-1.png" alt="">
                        </div>
                        <form id="contact-forms" class="default-form" novalidate="novalidate">
                            <div class="row clearfix">
                                
                                <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                    <input type="text" id="phone" required="" placeholder="Phone Number" aria-required="true">
                                </div>
                                
                                <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                                    <div id="msg" style="color:darkred"></div>
                                    <img src="~/assets/images/gifs/loader_1.gif" class="hidden" id="loader" width="300" height="280" />
                                    <a class="theme-btn style-one pull-right" id="btn_Status" href="javascript: getUserItemStatus();" name="submit-form">Get Status</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 info-column">
                <div class="info-inner">
                    <ul class="info-list clearfix">
                        <li>
                            <i class="flaticon-telephone"></i>
                            <p>Call Us</p>
                            <h6><a href="tel:2348167877465">0816 787 7465</a></h6>
                        </li>
                        <li>
                            <i class="flaticon-email"></i>
                            <p>Send Email</p>
                            <h6><a href="mailto:needhelp@steezz24.com">needhelp@steezz24.com</a></h6>
                        </li>
                        <li>
                            <i class="flaticon-clock"></i>
                            <p>Working Hours</p>
                            <h6>Mon/Sat 9:00am to 7:00pm</h6>
                        </li>
                        <li>
                            <i class="flaticon-pin"></i>
                            <p>Visit Now</p>
                            <h6>Head Office: Katampe, Kubwa</h6>
                        </li>
                    </ul>
                    <div class="btn-box"><a href="/placeorder" class="theme-btn style-one">Order service now</a></div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- contact-style-two end --> 
<style type="text/css">
    .hidden {
        display: none;
    }
</style>
