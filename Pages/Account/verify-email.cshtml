@page
@model ST24.Pages.Account.verify_emailModel
@{
    ViewData["Title"] = "Verify Email";
}

<!-- Page Title -->
<section class="page-title" style="background-image: url(/assets/images/background/page-title.jpg);">
    <div class="auto-container">
        <div class="content-box">
            <div class="title">
                <h1>Email Verification</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li><a href="/">Home</a></li>
                <li>Email</li>
            </ul>
        </div>
    </div>
</section>
<!-- End Page Title -->
<!-- error-section -->
<section class="error-section centred">
    <div class="auto-container">
        <div id="email_verified">
            <img src="/assets/images/gifs/loader_1.gif" id="action_loading" height="300" width="280" />
            <div class="inner-box hidden" id="okay">
                <h1>200</h1>
                <h2>Email Verified. <br />You can now login to access your account</h2>
                <a href="/account/login" class="theme-btn style-one">Account Login</a>
            </div>
            <div class="inner-box hidden" id="not_okay">
            <h1>404</h1>
            <h2>Email Not Verified. <br />You can't access your account. <br />Please check your Email</h2>
            
        </div>
        </div>
    </div>
</section>

<!-- error-section end -->

<style type="text/css">
    .text-error {
        color: red;
    }

    .hidden {
        display: none;
    }
</style>

<script type="text/javascript" src="/assets/st24js/AdminScript.js"></script>

